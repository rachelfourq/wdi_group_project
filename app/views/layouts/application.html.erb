<!DOCTYPE html>
<html>
<head>
  <title>BrushUp</title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.0/css/materialize.min.css">
  <link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,100' rel='stylesheet' type='text/css'>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.0/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/slideout/0.1.11/slideout.min.js"></script>


  <%= csrf_meta_tags %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slideout/0.1.11/slideout.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src='//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js'></script>
<script>
	WebFont.load( {
		google: {
			families: ['Montserrat', 'Karla']
		}
	} );
</script>

<script>
$(document).ready(function(){
  $('select').material_select();
  $('.modal-trigger').leanModal();
});
</script>
 
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><button class="navbar-toggle collapse in" data-toggle="collapse" id="menu-toggle-2"> 
                  <i class="fa fa-sort-amount-asc fa-2x"></i>
                </button></li>
            </ul>
</div>
   
<div id="wrapper" class="toggled-2">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
            <li>
            <div class='profilePic'>
            <% if @current_user %>
                <%= cl_image_tag(@current_user.cloud_id, :width => 150, :height => 150, :crop =>'thumb') %>
                <% end %>
                </div>
            </li>

            <li>
              <% if @current_user %>
                <a href="#"><span class="fa-stack fa-lg pull-left"><i class="fa fa-dashboard fa-stack-1x "></i></span> <%= @current_user.name  %></a>
                   <ul class="nav-pills nav-stacked" style="list-style-type:none;">
                    <li><a href="/profile">Profile</a></li>
                </ul>
              <% end %>
            </li>
            <li>
              <% if @current_user %>
                <a href="#"><span class="fa-stack fa-lg pull-left"><i class="fa fa-cloud-download fa-stack-1x "></i></span>Upload Profile Picture</a>
                   <ul class="nav-pills nav-stacked" style="list-style-type:none;">
                    <li><%= form_for @upload do |f| %>
                          <p> 
                            <%= f.file_field :picture %>
                          </p>
                          <p>
                            <%= f.submit 'Upload File', :class => 'btn'  %>
                          </p>
                        <% end %>
                    </li>
                </ul>
              <% end %>
            </li>
            <li>
              <% if @current_user %>            
                <a href="/about"><span class="fa-stack fa-lg pull-left"><i class="fa fa-desktop fa-stack-1x "></i></span>About</a>
              <% end %>  
            </li>
            <li>
              <% if @current_user %>
                <a href="/main"><span class="fa-stack fa-lg pull-left"><i class="fa fa-search fa-stack-1x "></i></span>Search</a>
              <% end %>
            </li>
            <li>
              <% if @current_user %>
                <a href="/auth/logout"><span class="fa-stack fa-lg pull-left"><i class="fa fa-server fa-stack-1x "></i></span>Logout</a>
              <% end %>
            </li>
        </ul>
    </div><!-- /#sidebar-wrapper -->
</div>

      
		<%= yield %>

</body>
</html>
